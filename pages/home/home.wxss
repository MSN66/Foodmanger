}



.swiper-container2{
  
  position: relative;
 }
 .swiper-container2 .swiper{
  height: 300rpx;
 }
 .swiper-container2 .swiper .img{
  width: 100%;
  height: 100%;
 }
 .swiper-container2 .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
 }
 .swiper-container2 .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
 }
 .swiper-container2 .dots .dot.active{
  width: 24rpx;
  background: #f80;
 }